{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}/app/index.ts",
            "cwd": "${workspaceRoot}",
            "outFiles": [
                "${workspaceRoot}/lib/index.js"
            ],
            "skipFiles": [
                "${workspaceRoot}/node_modules/**/*.js"
            ],
            "sourceMaps": true,
            "console": "externalTerminal"
        }
    ]
}